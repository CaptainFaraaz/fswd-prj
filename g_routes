// routes/goal.routes.js
const express = require('express');
const router = express.Router();
const goalController = require('../controllers/goalController');
const { protect } = require('../middleware/auth.middleware');

router.post('/create', protect, goalController.createGoal);
router.get('/family/:familyId', protect, goalController.getFamilyGoals);
router.get('/:id', protect, goalController.getGoalById);
router.get('/:id/progress', protect, goalController.getGoalProgress);
router.put('/:id', protect, goalController.updateGoal);
router.post('/:id/contribute', protect, goalController.addContribution);
router.delete('/:id', protect, goalController.deleteGoal);

module.exports = router;
